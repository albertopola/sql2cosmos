				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": "SELECT [value] FROM OPENJSON(\r\n(\r\nSELECT --modelname='t_acquisti', \r\n     --o.[IdAcquisti] as sqlid,\r\n     --o.[IdAnagrafica] as anagraficaid,\r\n\t ood.id as customerid,\r\n\t oo.Denominazione as denominazione,\r\n     o.[data_Fattura]  as data_fattura,\r\n     o.[NumFattura]   as num_fattura,\r\n     o.[imponibile] as total ,\r\n     o.[Imposte] as tax,\r\n\t o.[TotaleFattura] as grand_total,\r\n     o.[ProtIVA]  as prot_iva,\r\n\t\tSUBSTRING(o.URL, CHARINDEX('#', o.URL)+1, LEN(o.URL)- CHARINDEX('#',o.URL)-CHARINDEX('#', REVERSE(o.URL))) as url,\r\n     o.[IdDocumento]  as id_document,\r\n--POPOLAMENTO COSTASSIGNMENTS\r\n\t\t\t(select\t\r\n\t\t\tcontract_id=aa.id,\r\n\t\t\tcommessa=eed.Commessa,\r\n\t\t\timponibile_contract=ee.Imponibile\r\n\t\t\tfrom arc.T_Acquisti_Carico ee \r\n\t\t\tLeft Join Arc.T_Appalti eed on eed.IDAppalto=ee.IdAppalto\r\n\t\t\tLeft Join DBO.SQL2Cosmos aa on aa.IdSQL=eed.IdAppalto and aa.modelname='t_appalti'\r\n\t\t\twhere ee.IdAcquisti=o.IdAcquisti \r\n\t\t\t\r\n\t\t\tfor json PATH) as cost_assignments,\r\n\r\n--POPOLAMENTO EXPENSEASSIGNMENTS\r\n\t\t\t(SELECT \r\n\t\t\tiid.Descrizione as expense_name,\r\n\t\t\tii.CostoGenerale as imponibile_expense\r\n\t\t\tFROM ARC.T_Acquisti_CostiGenerali AS ii \r\n\t\t\tleft join arc.T_CostiGenerali iid on iid.IDCostiGenerali=ii.IDCostiGenerali\t\t\t\r\n\t\t\tWHERE ii.IDAcquisti=o.IDAcquisti\r\n\t\t\tFOR JSON PATH)as expense_assignments\r\n\r\n\r\n  FROM [arc].[T_Acquisti] as o \r\n  left join [arc].[T_Anagrafica] as oo \r\n\t\tLeft Join [dbo].[SQL2Cosmos] as ood on oo.IdAnagrafica=ood.IdSQL \r\n\t\ton o.IdAnagrafica=oo.IdAnagrafica where ood.modelname='t_anagrafica'\r\n FOR JSON PATH)\r\n)\r\nWHERE [value] IS NOT NULL; --copia solo i valori non null",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
